{
    "name": "phacil/app",
    "description": "Phacil PHP Framework App",
    "license": "MIT",
    "keywords": ["php", "framework", "phacil", "app"],
    "authors": [
        {
            "name": "Alisson Nascimento",
            "email": "alisson.sa.nascimento@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "phacil/phacil": "dev-master",
        "phacil/html": "dev-master",
        "phacil/http": "dev-master",
        "phacil/common": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/phacil/phacil.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/phacil/html.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/phacil/http.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/phacil/common.git"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "4.0.*"
    },
    "autoload": {
        "psr-4": {
            "Phacil\\App\\": "src/",
            "Phacil\\Plugin\\": "plugins/"
        }
    }
}
